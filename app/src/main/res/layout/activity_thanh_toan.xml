<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_thanh_toan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="com.example.vonga.motelroom.ThanhToanActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="239dp"
            android:layout_height="wrap_content">
        <TextView
                android:text="Số kW Điện:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView13" android:textSize="18sp"
                android:padding="7dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtSoKyDien" android:textSize="18sp"
                    android:layout_marginLeft="70dp" android:layout_marginRight="5dp"
                    android:textColor="@color/background"/>
            <TextView
                    android:text="KW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView25"
                    android:textSize="18sp" android:textColor="@color/background"/>
        </LinearLayout>
        <TextView
                android:text="Giá Điện:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView15" android:textSize="18sp"
                android:padding="7dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:weightSum="1">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtGiaDienThanhToan" android:textSize="18sp"
                    android:layout_marginLeft="70dp" android:layout_marginRight="5dp"
                    android:textColor="@color/background"/>
            <TextView
                    android:text="VNĐ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView26" android:textSize="18sp"
                    android:textColor="@color/background"/>
        </LinearLayout>
        <TextView
                android:text="Số Khối Nước:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView17" android:textSize="18sp"
                android:padding="7dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtSoKhoiNuoc" android:textSize="18sp"
                    android:layout_marginLeft="70dp" android:layout_marginRight="5dp"
                    android:textColor="@color/background"/>
            <TextView
                    android:text="Khối"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView27" android:textSize="18sp"
                    android:textColor="@color/background"/>
        </LinearLayout>
        <TextView
                android:text="Giá Nước:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView19" android:textSize="18sp"
                android:padding="7dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtGiaNuocThanhToan" android:textSize="18sp"
                    android:layout_marginLeft="70dp" android:layout_marginRight="5dp"
                    android:textColor="@color/background"/>
            <TextView
                    android:text="VNĐ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView28" android:textSize="18sp"
                    android:textColor="@color/background"/>
        </LinearLayout>
        <TextView
                android:text="Giá Phòng:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView21" android:textSize="18sp"
                android:padding="7dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtGiaPhongThanhToan" android:textSize="18sp"
                    android:layout_marginLeft="70dp" android:layout_marginRight="5dp"
                    android:textColor="@color/background"/>
            <TextView
                    android:text="VNĐ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView29" android:textSize="18sp"
                    android:textColor="@color/background"/>
        </LinearLayout>
        <TextView
                android:text="Tổng tiền phòng:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView30" android:textSize="18sp"
                android:padding="7dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtTongTienPhong" android:textSize="18sp"
                    android:layout_marginLeft="70dp" android:layout_marginRight="5dp"
                    android:textColor="@color/background"/>
            <TextView
                    android:text="VNĐ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView31" android:textSize="18sp"
                    android:textColor="@color/background"/>
        </LinearLayout>

    </LinearLayout>

    <Button
            android:text="Ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnOkThanhToan" android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp" android:layout_marginBottom="16dp"
            android:textColor="@color/mauTrang" android:background="@drawable/ripple_xanh" android:textSize="18sp"
            android:layout_marginTop="10dp"/>

</LinearLayout>
