<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_xem_chi_tiet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context="com.example.vonga.motelroom.XemChiTietActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Số điện cũ:"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" android:id="@+id/textView20"
                    android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtChiTietSoDienCu"
                    android:layout_marginLeft="10dp" android:textSize="18sp" android:textColor="@color/backgroudOld"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="8dp">
            <TextView
                    android:text="Số điện mới:"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" android:id="@+id/textView35"
                    android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtChiTietSoDienMoi"
                    android:layout_marginLeft="10dp" android:textSize="18sp" android:textColor="@color/backgroudOld"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="8dp">
            <TextView
                    android:text="Số nước cũ:"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" android:id="@+id/textView50"
                    android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtChiTietSoNuocCu"
                    android:layout_marginLeft="10dp" android:textSize="18sp" android:textColor="@color/backgroudOld"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="8dp">
            <TextView
                    android:text="Số nước mới:"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" android:id="@+id/textView52"
                    android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtChiTietSoNuocMoi"
                    android:layout_marginLeft="10dp" android:textSize="18sp" android:textColor="@color/backgroudOld"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="8dp">
            <TextView
                    android:text="Giá Phòng:"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" android:id="@+id/textView53"
                    android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtChiTietGiaPhong"
                    android:layout_marginLeft="10dp" android:textSize="18sp" android:textColor="@color/backgroudOld"/>
            <TextView
                    android:text="VNĐ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView39" android:textSize="18sp"
                    android:layout_marginLeft="5dp" android:textColor="@color/backgroudOld"/>

        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="Ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnOkChiTiet" android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp" android:layout_marginBottom="16dp"
            android:textColor="@color/mauTrang" android:background="@drawable/ripple_xanh" android:textSize="18sp"
            android:layout_marginTop="10dp"/>
</LinearLayout>
