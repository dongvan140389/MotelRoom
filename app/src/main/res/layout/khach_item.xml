<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp" android:weightSum="1">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="285dp"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtTenKhachList"
                    android:textSize="18sp" android:textColor="@color/backgroudOld" android:textStyle="normal|bold"
                    android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingTop="15dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtCMNDList" android:padding="10dp"/>
        </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="Sá»­a"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" android:id="@+id/btnSuaKhach" android:layout_weight="0.50"
                    android:layout_gravity="center_vertical" android:background="@drawable/ripple_xanh"
                    android:textColor="@color/mauTrang"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/close" android:id="@+id/ivDeleteKhach"
                    android:layout_gravity="right"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
